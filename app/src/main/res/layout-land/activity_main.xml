<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context="com.engineeringforyou.basesite.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/title"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/powered_by"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/siteNumber"
        android:hint="@string/site"
        android:inputType="number"
        android:textSize="24sp"
        android:maxLength="8"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:background="@android:color/holo_blue_bright"
        android:ems="10"
        tools:ignore="RtlHardcoded"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="34dp"
        android:layout_above="@+id/operators"
        android:layout_toStartOf="@+id/operators"
        android:layout_marginRight="34dp"
        android:layout_toLeftOf="@+id/operators" />

    <EditText
        android:id="@+id/siteAddress"
        android:hint="@string/address"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@android:color/holo_blue_bright"
        android:inputType="text"
        android:ems="10"
        android:textSize="24sp"
        android:maxLength="40"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/siteNumber"
        android:layout_alignLeft="@+id/siteNumber" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        android:text="@string/search"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        android:text="@string/search"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/button"
        android:layout_alignLeft="@+id/button" />

    <Button
        android:id="@+id/searchHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/searchHere"
        android:layout_alignTop="@+id/operators"
        android:layout_alignEnd="@+id/poweredBy"
        android:layout_alignRight="@+id/poweredBy" />

    <Spinner
        android:id="@+id/operators"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:entries="@array/operatorsStrings"
        android:popupBackground="@android:color/holo_blue_bright"
        android:background="#0cffeb"
        android:gravity="right"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginEnd="41dp"
        android:layout_alignRight="@+id/button"
        android:layout_marginRight="41dp" />

</RelativeLayout>
