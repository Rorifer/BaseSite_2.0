<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@null"
        android:visibility="gone"
        tools:srcCompat="@drawable/ic_status_ok"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/job_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/status_image"
        android:layout_toLeftOf="@id/status_image"
        tools:text="26.03.1985" />

    <TextView
        android:id="@+id/job_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_date"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toStartOf="@id/status_image"
        android:layout_toLeftOf="@id/status_image"
        tools:text="Заголовок работы" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_name"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        tools:text="МТС" />

    <TextView
        android:id="@+id/site_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_name"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/status_image"
        android:layout_toLeftOf="@id/status_image"
        android:layout_toEndOf="@id/operator"
        android:layout_toRightOf="@id/operator"
        tools:text="БС № 77-2245" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/site_number"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>